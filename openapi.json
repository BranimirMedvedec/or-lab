	"components": {
		"schemas": {
			"Club": {
				"type": "object",
				"properties": {
					"Naziv kluba": {
						"type": "string",
						"example": "Teniski klub Zagreb",
						"description": "Naziv kluba"
					},
					"Godina osnutka": {
						"type": "integer",
						"format": "int32",
						"example": "2010",
						"description": "Godina osnutka"
					},
					"Adresa": {
						"type": "string",
						"example": "Zagreb, Ilica 1",
						"description": "Adresa"
					},
					"Telefon/fax": {
						"type": "string",
						"example": "01/123-4567",
						"description": "Telefon/fax"
					},
					"E-mail": {
						"type": "string",
						"example": "club@gmail.com",
						"description": "E-mail"
					},
					"Web mjesto": {
						"type": "string",
						"example": "www.club.com",
						"description": "Web mjesto"
					},
					"Ovlaštena osoba1": {
						"type": "string",
						"example": "Ivan Horvat",
						"description": "Ovlaštena osoba1"
					},
					"OIB": {
						"type": "string",
						"example": "12345678901",
						"description": "OIB"
					},
					"Registarski broj": {
						"type": "string",
						"example": "12345678901",
						"description": "Registarski broj"
					},
					"Datum unosa/izmjene": {
						"type": "string",
						"format": "date",
						"example": "2020-10-30",
						"description": "Datum unosa/izmjene"
					},
					"Član RSS": {
						"type": "string",
						"example": "true or false",
						"description": "Član RSS"
					},
					"Sportovi": {
						"type": "array",
						"example": ["Tenis", "Nogomet"],
						"description": "Sportovi u kojima klub djeluje",
						"items": {
							"type": "string",
							"example": "Tenis",
							"description": "Sport"
						}
					}
				},
				"required": [
					"Naziv kluba",
					"Godina osnutka",
					"Adresa",
					"Telefon/fax",
					"E-mail",
					"Web mjesto",
					"Ovlaštena osoba1",
					"OIB",
					"Registarski broj",
					"Datum unosa/izmjene",
					"Član RSS",
					"Sportovi"
				]
			},
			"ClubCreatedResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Club created successfully"]
					},
					"insertedId": {
						"type": "string"
					}
				},
				"required": ["message", "insertedId"]
			},
			"ClubDeletedResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Club deleted successfully"]
					}
				},
				"required": ["message"]
			},
			"ClubModifySuccessResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Club modified successfully"]
					}
				},
				"required": ["message"]
			},
			"ClubBadRequestResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Bad request"]
					}
				},
				"required": ["message"]
			},
			"ClubNotFoundResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Club not found"]
					}
				},
				"required": ["message"]
			},
			"ClubInternalServerErrorResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": [
							"Error occurred while trying to process the request"
						]
					}
				},
				"required": ["message"]
			},
			"CreateClubMissingFieldsResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"enum": ["Invalid request or missing required fields"]
					}
				},
				"required": ["message"]
			}
		}
